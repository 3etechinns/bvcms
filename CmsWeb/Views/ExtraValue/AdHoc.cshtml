@using CmsWeb.Models
@model int
<form class="form ajax span12 margin-top" method="post"  data-init="ExtraEditable">
    <fieldset class="left-gutter">
        <legend>AdHoc Extra Values
            <small class="pull-right">
                <a href="/ExtraValue/Standard/@Model"class="ajax">Standard Extra Values</a> &bull;
                <a href="/ExtraValue/Family/@Model"class="ajax">Family Values</a>
            </small>
        </legend>
        <table class="table not-wide">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in ExtraValueModel.GetPeopleExtraValues(Model, "AdHoc").ToList())
                {
                    @Html.EditorFor(m => f)
                }
            </tbody>
        </table>
    </fieldset>
</form>
