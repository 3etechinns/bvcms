@using UtilityExtensions
@{
    var innewlook = User.IsInRole("Newlook");
}
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Help <span class="caret"></span></a>
    <ul class="dropdown-menu anchor-right">
        <li>@Helper.AnchorLink("Help Documentation", @Util.HelpLink(Util.Helpfile), "_blank")</li>
        <li>@Helper.JQueryIdLink("Email Support", "emailsupport")</li>

        @if (innewlook)
        {
            <li>@Html.ActionLink("Use Old Look", "UseOldLook", "APITest", new { Area = "" }, null)</li>
            if (DbUtil.Db.UserPreference("advancedsearch", "false").ToBool())
            {
            <li>@Html.ActionLink("Use Search Builder", "UseSearchBuilder", "APITest", new { Area = "" }, null) </li>
            }
            else
            {
            <li>@Html.ActionLink("Use Advanced Search", "UseAdvancedSearch", "APITest", new { Area = "" }, null) </li>
            }
            if (DbUtil.Db.UserPreference("newpeoplepage", "false").ToBool())
            {
            <li>@Html.ActionLink("Use Old Person Page", "UseOldPersonPage", "APITest", new { Area = "" }, null) </li>
            }
            else
            {
            <li>@Html.ActionLink("Use New People Page", "UseNewPeoplePage", "APITest", new { Area = "" }, null) </li>
            }
            if (User.IsInRole("finance"))
            {
                if (((string)HttpContext.Current.Session["testnofinance"]) == "true")
                {
                    <li>@Html.ActionLink("Turn finance on", "TurnFinanceOn", "APITest", new {Area = ""}, null) </li>
                }
                else
                {
                    <li>@Html.ActionLink("Turn finance off", "TurnFinanceOff", "APITest", new {Area = ""}, null) </li>
                }
            }
        }
        <li>@Html.ActionLink("About", "About", "Home", new { Area = "" }, null)</li>
    </ul>
</li>
