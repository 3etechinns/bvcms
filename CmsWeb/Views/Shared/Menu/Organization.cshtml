<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Organization</a>
    <ul class="dropdown-menu">
        @Helper.LiAnchorLink("Manage Organizations", "/OrgSearch/")
        @if (User.IsInRole("Edit"))
        {
            <li>@Helper.JQueryIdLink("Add New Organization", "addorg")</li>
            @Helper.LiAnchorLink("Manage Org Members", "/Manage/OrgMembers/")
        }
        @Helper.LiAnchorLink("Coupons", "/Coupon/", User.IsInRole("Coupon"))
        @Helper.LiAnchorLink("Manage Promotion", "/Promotion/", User.IsInRole("Edit"))
        <li class="space"></li>
        @foreach (var o in Util2.MostRecentOrgs)
        {
            @Helper.LiAnchorLink(o.Name, "/Organization/Index/" + o.Id)
        }
    </ul>
</li>
