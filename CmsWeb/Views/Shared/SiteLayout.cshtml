<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    @Html.Partial("CombinedCss")
    @RenderSection("head", required: false)
</head>
<body>
@{ 
    var admin = User.IsInRole("Admin");
    var manageemails = User.IsInRole("ManageEmails");
    var managetrans = User.IsInRole("ManageTransactions");
	var edit = User.IsInRole("Edit"); 
	var design = User.IsInRole("Design"); 
}
@if (Util.UrgentMessage.HasValue())
{
        <div id='urgentNotice'>@Util.UrgentMessage</div>
}
@if (DbUtil.TopNotice().HasValue())
{
        <div id='TopNotice'>@Html.Raw(DbUtil.TopNotice())</div>
}
@if (Request.Browser.Type == "IE7")
{
        <div id="urgentNotice">You are running IE7. This application requires IE8+, Firefox, Chrome or Safari</div>
}
    <div id="container">
        <div class="header">
            <table cellpadding="0" cellspacing="0" style="width: 100%">
                <tr>
                    <td class="left">
                        <a href="/">
                            @Html.Raw(DbUtil.HeaderImage(@"<img src=""/Content/bvcms132x55.png"" width=""132"" height=""55"" />"))</a>
                    </td>
                    <td class="center">
                        @Html.Raw(DbUtil.Header())
                    </td>
                    <td class="right">
                        <div id="userarea">
                            <div id="welcome" class="dropdown left">
                                <div>
                                    <a href="#">Welcome, @Util.UserPreferredName!
                                        <img src="/Content/Welcome.png" width="11" height="16"></a></div>
                                <div class="sublinks">
                                    <a href="/Account/LogOff/">Logout as @Util.UserName</a>
                                    <a href="/Account/ChangePassword">Change Password</a>
                                    <a id="cleartag" href="#" class="warntip" title="WARNING|This will CLEAR OUT the active tag">Clear Active Tag</a>
                                    <a href="/Tags">Manage Active Tag</a>
@if (admin)
{
                                        <a href="/Admin/Users.aspx">Manage Users</a>
                                        <a href="/Admin/Activity.aspx">Activity Log</a>
}
                                </div>
                                <strong>Active Tag:</strong> <span id="activetag">@Util2.CurrentTagName</span><br />
                            </div>
@if (User.IsInRole("Access"))
{
                                <form method="post">
                                    <input id="SearchText" type="text" title='Partial names: "last" or "first last" or "first<sp>"' />
                                </form>
}
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div>
                        </div>
                    </td>
                    <td>
                    </td>
                </tr>
            </table>
@if (User.IsInRole("Access"))
{
                <table id="cmenu">
                    <tr>
                        <td class="dropdown">
                            <div>
                                <a href="/">Home</a></div>
                        </td>
                        <td class="dropdown">
                            <div>
                                <a href="/QuickSearch">People</a></div>
                            <div class="sublinks">
                                <a href="/QuickSearch">People Search</a>
                                <a id="addpeople" href="#">Add People</a> 
                                <a href="/Tags">Manage Tags</a>
                                <a href="/Task/List/">Tasks</a> <a href="/ContactSearch">Contact Search</a>
    @if (Util2.CurrentPeopleId != 0)
    {
                                    <a href="/Person/Index/@Util2.CurrentPeopleId">
                                        @Session["ActivePerson"]</a>
    }
                            </div>
                        </td>
                        <td class="dropdown">
                            <div>
                                <a id="OrgSearchLink" href="/OrgSearch">Organization</a></div>
                            <div class="sublinks">
                                <a href="/OrgSearch">Search</a> <a href="/EmailAttendanceNotices.aspx">Email Attendance Notices</a> 
    @if (User.IsInRole("Edit"))
    {
                                <a id="addorg" href="#">Add Organization</a> 
                                <a href="/OrgMembers">Org Members Management</a>
    }
    @if (User.IsInRole("Coupon"))
    {
                                <a href="/Coupon/">Coupons</a>
    }
                                <a href="/EnrollmentControlReport.aspx">Enrollment Control Report</a>
    @if (((string)Session["ActiveOrganization"]).HasValue())
    {
                                <a href="/Organization/Index/@Util2.CurrentOrgId">
                                        @Session["ActiveOrganization"]</a>
    }
                            </div>
                        </td>
                        <td class="dropdown">
                            <div>
                                <a href="/Reports/ChurchAttendance" target="_blank">Reports</a></div>
                            <div class="sublinks">
                                <a href="/Reports/VitalStats" target="_blank">Vital Stats</a> 
                                <a href="/Reports/ChurchAttendance" target="_blank">Week at a Glance</a> 
                                <a href="/Reports/ChurchAttendance2" target="_blank">Average Week at a Glance</a> 
    @if (DbUtil.Db.Setting("Bellevue", "false") == "true")
    {
                                <a href="/Report/ChurchAttendanceSummaryRpt.aspx" target="_blank">Church Attendance Summary</a> 
    }
                                <a href="/Report/ChurchAttendanceRpt.aspx" target="_blank">Weekly Decisions</a> 
                                <a href="/Report/DecisionSummary.aspx" target="_blank">Decision Summary</a>
                            </div>
                        </td>
                        <td class="dropdown">
                            <div>
                                <a href="/QueryBuilder/Main">QueryBuilder</a></div>
                            <div class="sublinks">
                                <a href="/QueryBuilder/Main">Last Query</a>
                                <a href="/QueryBuilder/NewQuery">New Query</a>
                                <a href="/SavedQuery">Saved Queries</a>
    @if ((string)ViewData["OnQueryBuilder"] == "true")
    {
                                    <a id="ShowOpenQuery" href="#">Open Saved Query</a>
                                    <a id="ShowSaveQuery" href="#">Save Query As</a>
    }
                                <a href="/Reports/ExtraValues">Extra Values</a>
                            </div>
                        </td>
    @if (User.IsInRole("Finance"))
    {
                            <td class="dropdown">
                                <div>
                                    <a href="/Contributions/Bundles.aspx">Contributions</a></div>
                                <div class="sublinks">
                                    <a href="/Contributions/Bundles.aspx">Bundles</a>
                                    <a href="/Finance/Contributions"> All</a>
                                    <a href="#" class="heading">&mdash; Reports &mdash;</a>
                                    <a href="/Statements" target="_blank">Statements (All)</a>
                                    <a href="/Contributions/GLExtract.aspx">GL Extract</a>
                                    <a href="/FinanceReports/TotalsByFund">Totals by Fund</a>
                                    <a href="/Contributions/Reports/TotalsByFundAgeRange.aspx" target="_blank">Totals by Fund Age Range</a>
                                    <a href="/Contributions/Reports/TotalsByFundAgeRange.aspx?pledged=both" target="_blank">Totals by Fund Age Range (pledges included)</a>
                                    <a href="/Contributions/Reports/TotalsByFundRange.aspx" target="_blank">Totals by Fund Range</a>
                                    <a href="/Contributions/Reports/TotalsByFundRange.aspx?pledged=true" target="_blank">Pledge Totals by Fund Range</a>
                                    <a href="/FinanceReports/PledgeReport" target="_blank">Pledge Report</a>
                                    <a href="/FinanceReports/ManagedGiving" target="_blank">Managed Giving</a>
												@if (DbUtil.Db.Setting("ShowQuickBooksMenu", "false") == "true")
												{
												<a href="/QuickBooks">QuickBooks</a>
												}	
                                </div>
                            </td>
    }
    @if (admin || manageemails || managetrans || edit || design)
    {
                            <td class="dropdown">
                                <div>
                                    <a href="/Admin/Users.aspx">Admin</a></div>
                                <div class="sublinks" class="last">
                                @if (admin)
                                {
                                    <a href="/Setup/Program/">Programs</a> 
                                    <a href="/Setup/Division/">Divisions</a>
                                    <a href="/Setup/Setting">Settings</a> 
                                    <a href="/Setup/MetroZip/">Metro Zips</a> 
                                }
                                @if (admin || design)
                                {
                                    <a href="/Display/Index/">Special Content</a>
                                }
                                @if (admin || managetrans)
                                {
                                    <a href="/Manage/Transactions">Transactions</a>
                                }
								@if (admin || edit)
        {
									<a href="/Manage/CheckinTime">Check-in Activity</a>
        }			
                                @if (admin || manageemails)
                                {
                                    <a href="/Manage/Emails">Emails</a> 
                                }
                                @if (admin)
                                {
                                    <a href="/Setup/Lookup/">Lookups</a>
                                    <a href="/Batch/UpdateFields/"> Update for a Tag</a> 
                                    <a href="/Admin/ToggleOrgMembersOnly.ashx">@(Util2.OrgMembersOnly ? "OrgMembersOnly is on" : "OrgMembersOnly is off")</a>
                                    <a href="/Admin/ToggleOrgLeadersOnly.ashx">@(Util2.OrgLeadersOnly ? "OrgLeadersOnly is on" : "OrgLeadersOnly is off")</a>
                                    <a href="/Batch/UpdateQueryBits">Update QueryBits</a>
                                    <a href="/Batch/TagPeopleIds">Tag PeopleIds</a>
                                }
                                </div>
                            </td>
    }
                        <td class="dropdown left">
                            <div>
                                <a id="helplink" href="@Util.HelpLink(Util.Helpfile)" target="_blank">Help</a></div>
                            <div class="sublinks">
                                <a href="@Util.HelpLink(Util.Helpfile)" target="_blank">Help Documentation</a>
                                <a href="mailto:support@bvcms.com?Subject=Support request from @Util.UserFullName at @Util.CmsHost2" target="_blank">Email Support</a>
                                <a href="/Home/About">About</a>
                                <a href="#" class="heading">&mdash; Tutorials &mdash;</a>
											@{
    var tutorialMenu = Server.MapPath(".") + "/Content/Tutorials/" + Util.Helpfile + "_Menu.cshtml";
    if (File.Exists(tutorialMenu))
    {
        Html.RenderPartial("/Content/Tutorials/" + Util.Helpfile + "_Menu.cshtml");
    }
											}			  
                            </div>
                        </td>
                    </tr>
                </table>
}
            <div style="clear: both; border-bottom: 4px solid #ddd">
            </div>
        </div>
        <div id="main">
            @RenderBody()
				@if (DbUtil.Db.Setting("ShowTutorialFileNames", "false") == "true")
    { 
				<br />
				<b>Menus:</b> @(Util.Helpfile)@:_Menu.html<br />
				<b>Tutorials:</b> @(Util.Helpfile)@:.html
				}		  
				@{
                    var tutorialFile = Server.MapPath(".") + "/Content/Tutorials/" + Util.Helpfile + ".cshtml";
                    if (File.Exists(tutorialFile))
                    {
                        Html.RenderPartial("/Content/Tutorials/" + Util.Helpfile + ".cshtml");
                    }
				}	
        </div>
    </div>
    <div id="ChooseLabelType" class="modalPopup" style="display: none; width: 400px;
        padding: 10px">
        <table>
            <tr>
                <td style="margin: 3px; border: solid thin black" nowrap="nowrap">
                    <input type="radio" id="addressedto1" name="addressedto" value="Individual" checked="checked"
                        title="Addressed to individuals" />
                    Individual<br />
                    <input type="radio" id="addressedto2" name="addressedto" value="Family" title="Addressed as a family when there are children" />
                    Family<br />
                    <input type="radio" id="addressedto6" name="addressedto" value="FamilyMembers" title="Includes entire Family as individuals" />
                    Family Members<br />
                    <input type="radio" id="addressedto3" name="addressedto" value="CouplesBoth" title="Addressed to a couple, if both are in selection" />
                    Couples (both)<br />
                    <input type="radio" id="addressedto4" name="addressedto" value="CouplesEither" title="Addressed to a couple, if one or both are in selection" />
                    Couples (either)<br />
                    <input type="radio" id="addressedto5" name="addressedto" value="ParentsOf" title="Addressed to parents or parent" />
                    Parents Of<br />
                </td>
                <td>
                    <input type="checkbox" id="UseTitle" name="UseTitle" />
                    Use Titles<br />
                    <input type="checkbox" id="UsePhone" name="UsePhone" />
                    Include Phone
                </td>
            </tr>
            <tr>
                <td colspan="2" align="right">
                    <input id="cmdOK" type="button" value="OK" />
                </td>
            </tr>
        </table>
    </div>
    <div id="ExportStartEnd" class="modalDiv dialog" style="display: none">
        <table>
        <tr><th colspan="2">Select a date range</th></tr>
        <tr><th>Start Date</th><td><input id="startdt" type="text"  class='datepicker' /></td></tr>
        <tr><th>End Date</th><td><input id="enddt" type="text" class='datepicker' /></td></tr>
        <tr><td align="right" colspan="2">
            <a class="bt" id="ExportStartEndRun" href="#"> run </a></td>
        </tr>
        </table>
    </div>
    <div id="SetExtraValues" class="modalDiv dialog" style="display: none">
        <table>
        <tr><th>Field</th><td><input id="field" type="text" /></td></tr>
        <tr><th>Value</th><td><input id="value" type="text" /></td></tr>
        <tr><td align="right" colspan="2">
            <a class="bt" id="SetExtraValuesRun" href="#"> OK </a></td>
        </tr>
        </table>
    </div>
    <div id="AddDialog">
    <iframe id="AddDialogiframe" style="width:99%;height:99%;border-width:0px"></iframe>
    </div>
@RenderSection("PopupsPlaceholder", required: false)
@Html.Partial("CombinedJs")
@Html.Partial("DatePickerDefaults")
@RenderSection("scripts", required: false)
</body>
</html>

