    <style type="text/css">
        @{ var bkcolor = DbUtil.Db.Setting("HeaderBackground", ""); }
        @if (bkcolor.HasValue())
        {
            @:#header { background-color: @bkcolor; }
        }
    </style>
    @Helper.IncludeJs2()
    @RenderSection("scripts", required: false)
    @Html.Partial("DatePickerDefaults2")
</head>
    <body>
        <div class="page-container">
            @Html.Partial("Notices")
            @Html.Partial("NewHeader2")
            @RenderBody()
            @Html.Partial("Footer")
            @Html.Partial("Dialogs")
            @RenderSection("PopupsPlaceholder", required: false)
            <img src="/images/ajax-loader.gif" id="loading-indicator" style="display: none" />
        </div>
    </body>
</html>
