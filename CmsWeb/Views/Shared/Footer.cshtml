<footer class="container">
    <p class="vcard ten columns alpha" style="text-align: center">
        <span class="org">@DbUtil.Db.Setting("nameofchurch", "Name of Church")</span>
        <span class="phone">@DbUtil.Db.Setting("ChurchPhone", "phone")</span>
        <span class="email">@DbUtil.AdminMail</span>
    </p>
    @if (!User.IsInRole("Access"))
    {
        <div class="pull-right">@Helper.AnchorLink("Logout as " + Util.UserName, "/Account/LogOff/")</div>
    }
</footer>
