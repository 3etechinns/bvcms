@using UtilityExtensions
@model DateTime?
@{
    var fmt = "{0:g}";
    var s = "";
    if (Model != null)
    {
        if (Model.Value.Ticks > 0)
        {
            s = Model.FormatTime();
            fmt = "{0:h:mm tt}";

        }
        else
        {
            s = Model.FormatTime();
        }
    }
}
<div class="control-group @ViewBag.height33 @ViewBag.hide">
    @Html.LabelFor(m => m, new { @class = "control-label" })
    <div class="controls">
      <div class="input-append date timepicker" data-date='@Model.FormatTime()'>
        @Html.TextBoxFor2(m => m,
                useNativeUnobtrusiveAttributes: true,
                format: @fmt,
                htmlAttributes: new { size = "16" })<span class="add-on"><i class="icon-th"></i></span>
      </div>
        @Html.ValidationMessageLabelFor(m => m)
    </div>
</div>
