@model string
<div class="form-group @ViewBag.hide">
    @(ViewBag.label != null
        ? Html.Label(ViewBag.label as string, new { @class = "control-label" }) 
        : Html.LabelFor(m => m, new { @class = "control-label" }))
    @Html.TextBoxFor2(m => m, true, null, new { @class = "form-control"})
    <label class="help-block">@Html.Raw(ViewBag.help)</label>
    @Html.ValidationMessageLabelFor(m => m)
</div>
