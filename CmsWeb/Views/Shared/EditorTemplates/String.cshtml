@model string
@{
    var help = ViewData["help"] as string;
    var label = ViewData["label"] as string;
    if (help.HasValue())
    {
        help = "<label class='help-inline'>{0}</label>".Fmt(help);
    }
    var disabled = ViewData["disabled"].ToBool() ? "warning" : "";
    var disabledattr = ViewData["disabled"].ToBool() ? new {disabled = "true"} : null;
}
<div class="control-group @disabled @ViewBag.hide">
    @if (label.HasValue())
    {
        @Html.Label(label, new {@class = "control-label"})
    }
    else
    {
        @Html.LabelFor(m => m, new {@class = "control-label"})
    }
    <div class="controls">
        @Html.TextBoxFor2(m => m, true, null, disabledattr)@Html.Raw(help)
        @Html.ValidationMessageLabelFor(m => m)
    </div>
</div>
