@model string
<div class="control-group @ViewBag.hide">
  @(ViewBag.label != null
        ? Html.Label(ViewBag.label as string, new { @class = "control-label" })
        : Html.LabelFor(m => m, new { @class = "control-label" }))
  <div class="controls">
    @Html.TextBoxFor2(m => m, true, null)<label class='help-inline'>@Html.Raw(ViewBag.help)</label>
    @Html.ValidationMessageLabelFor(m => m)
    @if (ViewBag.ShowHelp != false && ViewData.ModelMetadata.Description.HasValue())
    {
      <div class="alert alert-info maxWidthMedium margin-top">@Html.Markdown(ViewData.ModelMetadata.Description)</div>
    }
  </div>
</div>
