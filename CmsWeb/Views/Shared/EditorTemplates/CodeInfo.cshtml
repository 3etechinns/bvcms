@model CmsWeb.Code.CodeInfo
@{
    if (Model == null)
    {
        throw new Exception("model is null in CodeInfo for " + ViewData.TemplateInfo.HtmlFieldPrefix);
    }
}
<div class="control-group">
    @Html.LabelFor(m => m, new { @class="control-label"})
    <div class="controls code-dropdown">
        @Html.DropDownListFor(m => m.Value, Model.Items)
        @Html.HiddenFor(m => m.Name)
    </div>
</div>
