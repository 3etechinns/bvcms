@model bool
@{
    var source = ViewData["source"] + ViewData.TemplateInfo.HtmlFieldPrefix;
    var url = ViewData["url"];
}
<div class="control-group">
    @Html.LabelFor(m => m, new { @class = "control-label" })
    <div class="controls">
        <a class="editable click-pencil" href="#" data-pk="1" data-type="checkbox" data-name="@ViewData.TemplateInfo.HtmlFieldPrefix" data-value="@Model" data-url="@url" data-source="@source"><span>@Model</span></a>
    </div>
</div>
