@using CmsWeb.Code
@{
    var access = User.IsInRole("Access");
    var finance = User.IsInRole("Finance");
    var targetperson = Util2.TargetLinkPeople;
    var testnofinance = ((string)HttpContext.Current.Session["testnofinance"]) == "true";
}
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        @if (access)
        {
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/"><img class="img-responsive hidden-lg hidden-xs logo" src="@Url.Content("~/Content/touchpoint/images/logo_sm.png")" /><img class="img-responsive hidden-md hidden-sm hidden-xs logo" src="@Url.Content("~/Content/touchpoint/images/logo.png")" /><img class="img-responsive hidden-lg hidden-md hidden-sm logo" style="margin-left: 25px;" src="@Url.Content("~/Content/touchpoint/images/logo.png")" /></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @Html.Partial("Menu/People")
                    @Html.Partial("Menu/Organization")
                    @Html.Partial("Menu/Reports")
                    @Html.Partial("Menu/Admin")
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-tag"></i>&nbsp;&nbsp;<span class="visible-lg-inline visible-xs-inline">@Util2.CurrentTagName</span> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Tags"><b><i id="current-tag2">@Util2.CurrentTagName</i></b></a></li>
                            <li><a id="cleartag" href="/Tags/ClearTag"><i>Empty Active Tag</i></a></li>
                            @{
                                var userTags = CodeValueModel.UserTags();
                            }
                            @if (userTags.Any())
                            {
                                <li class="divider"></li>
                                <li class="dropdown-header">User Tags</li>
                                foreach (var t in userTags)
                                {
                                    <li><a href="/Home/SwitchTag?tag=@t.Value">@t.Value</a></li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="me"><img src="me.jpg" class="img-responsive img-circle">&nbsp;&nbsp;<span class="visible-lg-inline visible-xs-inline">@Util.UserFullName</span> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @Helper.LiAnchorLink("Profile", "/Person2/" + Util.UserPeopleId)
                            @Helper.LiAnchorLink("Change Password", "/Account/ChangePassword/")
                            <li><a href="#"><i class="dropdown-icon fa fa-cog"></i>&nbsp;&nbsp;Settings</a></li>
                            <li class="divider"></li>
                            @Helper.LiAnchorLink("Log Out", "dropdown-icon fa fa-power-off", "/Account/LogOff/")
                        </ul>
                    </li>
                    <li>@Html.Partial("Menu/Help")</li>
                </ul>
            </div>
        }
    </div>
</nav>