@using CmsWeb.Code
@{
    var access = User.IsInRole("Access");
    var finance = User.IsInRole("Finance");
    var targetperson = Util2.TargetLinkPeople;
    var testnofinance = ((string)HttpContext.Current.Session["testnofinance"]) == "true";
}
<style>
    #thumbnail-picture {
        background-image: url(@Util.UserThumbPictureUrl);
    }
</style>
<nav class="navbar navbar-default navbar-fixed-top hidden-print">
    <div class="container-fluid">
        @if (access)
        {
            <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/"><img class="img-responsive hidden-lg hidden-xs logo" src="@Url.Content("~/Content/touchpoint/images/logo_sm.png")" /><img class="img-responsive hidden-md hidden-sm hidden-xs logo" src="@Url.Content("~/Content/touchpoint/images/logo.png")" /><img id="logo" class="img-responsive hidden-lg hidden-md hidden-sm logo" style="margin-left: 25px;" src="@Url.Content("~/Content/touchpoint/images/logo.png")" /></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="visible-xs-block"><a href="#" data-toggle="modal" data-target="#search-box" id="search-button"><i class="fa fa-search"></i><span class="visible-lg-inline visible-xs-inline">&nbsp;&nbsp;Search</span></a></li>
                    @Html.Partial("Menu/People")
                    @Html.Partial("Menu/Organization")
                    @Html.Partial("Menu/Reports")
                    @Html.Partial("Menu/Admin")
                </ul>
                <ul id="tagstop" class="nav navbar-nav navbar-right">
                    <li class="hidden-xs"><a href="#" data-toggle="modal" data-target="#search-box" id="search-button"><i class="fa fa-search"></i><span class="visible-lg-inline visible-xs-inline">&nbsp;&nbsp;Search</span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="currentTag username"><i class="fa fa-tag"></i>&nbsp;&nbsp;<span id="current-tag1" class="visible-lg-inline visible-xs-inline">@Util2.CurrentTagName</span></span> <span class="caret"></span>
                        </a>
                        <ul id="tag-dropdown" class="dropdown-menu">
                            <li><a href="/Tags"><b><i id="current-tag2">@Util2.CurrentTagName</i></b></a></li>
                            <li><a id="cleartag" href="/Tags/ClearTag"><i>Empty Active Tag</i></a></li>
                            @{
                                var userTags = CodeValueModel.UserTags();
                            }
                            @if (userTags.Any())
                            {
                                <li class="divider"></li>
                                <li class="dropdown-header">User Tags</li>
                                foreach (var t in userTags)
                                {
                                    <li><a href="/Home/SwitchTag?tag=@t.Value">@t.Value</a></li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="me">
                            @if (!string.IsNullOrEmpty(Util.UserThumbPictureUrl))
                            {
                                <div id="thumbnail-picture" class="img-circle hidden-xs"></div>
                            }
                            else
                            {
                                <i class="fa fa-user hidden-xs"></i>
                            }
                            <i class="fa fa-user visible-xs-inline"></i>&nbsp;&nbsp;<span class="visible-lg-inline-block visible-xs-inline">@(Util.UserName == "Admin" ? "Admin" : Util.UserFirstName)</span> <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @Helper.LiAnchorLink("Profile", "/Person2/" + Util.UserPeopleId)
                            @Helper.LiAnchorLink("Change Password", "/Account/ChangePassword/")
                            <li class="divider"></li>
                            <li>
                                <a href="/Home/TargetPerson/@Html.Raw(targetperson)">
                                    @if (targetperson)
                                    {
                                        <i class="dropdown-icon fa fa-toggle-on" style="color: #5cb85c"></i><span>&nbsp;&nbsp;Open People In New Tab</span>
                                    }
                                    else
                                    {
                                        <i class="dropdown-icon fa fa-toggle-off"></i><span>&nbsp;&nbsp;Open Person In New Tab</span>
                                    }
                                </a>
                            </li>
                            @if (finance)
                            {
                                <li>
                                    @if (!testnofinance)
                                    {
                                        <a href="/APITest/TurnFinanceOff"><i class="dropdown-icon fa fa-toggle-on" style="color: #5cb85c"></i><span>&nbsp;&nbsp;Finance Role</span></a>
                                    }
                                    else
                                    {
                                        <a href="/APITest/TurnFinanceOn"><i class="dropdown-icon fa fa-toggle-off"></i><span>&nbsp;&nbsp;Finance Role</span></a>
                                    }
                                </li>
                            }
                            @Helper.LiAnchorLink("Reset Help Tips", "/ResetTips")
                            <li class="divider"></li>
                            @Helper.LiAnchorLink("Log Out", "dropdown-icon fa fa-power-off", "/Account/LogOff/")
                        </ul>
                    </li>
                    <li>@Html.Partial("Menu/Help")</li>
                </ul>
            </div>
        }
    </div>
</nav>