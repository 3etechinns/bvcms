@using UtilityExtensions
@model decimal?
<div class="control-group">
    @(ViewBag.label != null
        ? Html.Label(ViewBag.label as string, new {@class = "control-label"}) 
        : Html.LabelFor(m => m, new {@class = "control-label"}))
    <div class="controls">
        <p>@Model.ToString2("N2")</p>
    </div>
</div>
