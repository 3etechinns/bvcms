@{
    var newlook = ViewExtensions2.NewLook3();
    var imgsrc = newlook ? "/Content/img/calendar.png" : "/Content/images/calendar.gif";
}
<script type="text/javascript">
    $(function () {
        $.validator.methods.number = function(value, element) {
            return this.optional(element) || /@Util.jQueryNumberValidation/.test(value);
        };
        $.validator.methods.date = function (value, element) {
            return this.optional(element) || /@Util.jQueryDateValidation/.test(value);
        };
        $.dateFormat = '@Util.jQueryDateFormat';
        $.datepicker.setDefaults({
            dateFormat: $.dateFormat,
            changeMonth: true,
            changeYear: true,
            yearRange: "-95:+5",
            showOn: "button",
            buttonImage: "@imgsrc",
            buttonImageOnly: true,
            buttonText: 'Pick a date'
        });
    });
</script>
