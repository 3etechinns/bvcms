@{
    var newlook = DbUtil.Db.UserPreference("newlook3", "false").ToBool();
    var oldQuickSearch = DbUtil.Db.UserPreference("oldQuickSearch", "true").ToBool();
    var imgsrc = newlook ? "/Content/img/calendar.png" : "/images/calendar.gif";
}
<script type="text/javascript">
    $.dateFormat = '@Util.jQueryDateFormat';
    $.oldQuickSearch = '@oldQuickSearch' === 'True';
    $(function () {
        $.datepicker.setDefaults({
            dateFormat: $.dateFormat,
            changeMonth: true,
            changeYear: true,
            yearRange: "-95:+5",
            showOn: "button",
            buttonImage: "@imgsrc",
            buttonImageOnly: true,
            buttonText: 'Pick a date'
        });
    });
</script>
