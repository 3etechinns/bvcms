@model DeleteMeetingRun
<div class="modal-header">
  <a class="close" data-dismiss="modal">x</a>
  <h3>Delete Meeting @(Model.Started.HasValue ? "Progress" : "")</h3>
</div>
<div class="modal-body">
  @Html.Hidden("finished", Model.Completed.HasValue)
  @Html.HiddenFor(m => m.Id)
  @Html.Hidden("callback", "ReloadMeetings")
  @Html.DisplayFor(m => m.NumberOfAttends)
  @Html.SpanIf(!Model.Started.HasValue, "Are you sure you want to delete this meeting?", null)
  @Html.DisplayForIf(m => m.Started, Model.Started.HasValue, "DateAndTime")
  @Html.DisplayForIf(m => m.Processed, Model.Processed > 0)
  @Html.DisplayForIf(m => m.Completed, Model.Completed.HasValue, "DateAndTime")
  @Html.DisplayForIf(m => m.Error, Model.Error.HasValue())
  @Html.DisplayForIf(m => m.Elapsed, Model.Elapsed.HasValue)
</div>
<div class="modal-footer">
  @if (!Model.Started.HasValue)
  {
    <a href="#" class="btn btn-success" data-dismiss="modal">Cancel</a>
    <a href="/Dialog/DeleteMeeting/@Model.Id" class="btn btn-primary ajaxreloader">OK</a>
  }
  else if (Model.Completed.HasValue)
  {
    <a href="#" class="btn btn-success" data-dismiss="modal">Dismiss</a>
  }
</div>