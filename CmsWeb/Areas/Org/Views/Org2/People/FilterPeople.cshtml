@model CmsWeb.Areas.Org2.Models.OrgPeopleModel
<div class="filter">
  <div class="form-inline">
    <span style="cursor: pointer; color: blue;" data-toggle="popover" data-content="@Model.NameFilterHelp" data-original-title="Name Filter"><i class="fa fa-info-circle"></i></span> &nbsp;&nbsp;
    <textarea rows="4" id="nameFilter" name="nameFilter" placeholder="Name Filter">@Model.NameFilter</textarea> &nbsp;&nbsp;&nbsp;
    <span style="cursor: pointer; color: blue;" data-toggle="popover" data-content="@Model.SgFilterHelp" data-original-title="Sub-Group Filter"><i class="fa fa-info-circle"></i></span>&nbsp;
    <textarea rows="4" id="sgFilter" name="sgFilter" placeholder="Sub-Group Filter">@Model.SgFilter</textarea>
    <div class="btn-group" style="margin-left: -4px">
      <button class="btn dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" style="height: 200px; overflow: auto;">
        <li>
          <a href="#" id="excludesg">Exclude</a>
        </li>
        <li>
          <a href="#" class="selectsg">Match All</a>
        </li>
        <li>
          <a href="#" class="selectsg">None Assigned</a>
        </li>
        @foreach (var sg in Model.SmallGroups())
        {
          <li>
            <a href="#" class="selectsg"><i class="fa fa-minus hide"></i>@sg.Text</a>
          </li>
        }
      </ul>
    </div> &nbsp;
    <div class="input-append">
      <a class="setfilter btn">
        Filter
        @if (Model.IsFiltered)
        {
          <span style='color: red'>(filtered)</span>
        }
      </a>
      <div class="btn-group">
        <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a href="#" id="filter-ind" class="@Model.FilterIndActive">Filter Checked Individuals</a></li>
          <li><a href="#" id="filter-tag" class="@Model.FilterTagActive">Filter by Active Tag</a></li>
          <li><a href="/Org/CheckAll" id="check-all" class="ajax">Check All</a></li>
          <li><a href="/Org/CheckNone" id="check-none" class="ajax">Check None</a></li>
        </ul>
      </div>
    </div>
    <a class="btn" id="clear-filter" href="#">Clear</a>
  </div>
</div>