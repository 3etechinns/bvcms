@model AskGradeOptions
@using CmsData.Registration
@using (var ci = Html.BeginCollectionItem(Model.Name))
{
    var listname = Html.NameFor2(m => m.list);
    <div class="movable type-@Model.Type well">
        @Html.Raw(ci.hiddenindex)
        @Html.HiddenFor(m => m.Type)
        <div class="row">
            <div class="col-sm-12">
                @Html.Partial("EditorTemplates/QuestionsMenu")
                <label class="ask-question">Ask Grade Options</label>
            </div>
        </div>
        @if (ViewBag.ShowHelp != false)
        {
            <div class="alert alert-info maxWidthMedium margin-top">@Html.Markdown(Model.Help)</div>
        }
        <div class="row">
            <div class="col-sm-12">
                <div class="pull-right newitem">
                    <a href="/Org/NewGradeOption/@listname" class="btn btn-success btn-sm" data-dest="#GradeOptions"><i class="fa fa-plus-circle"></i> Add Item</a>
                </div>
            </div>
        </div>
        <br /> 
        <div id="GradeOptions" class="movable-list sort">
            @foreach (var item in Model.list)
            {
                item.Name = listname;
                @Html.EditorFor(m => item)
            }
        </div>
    </div>
}
