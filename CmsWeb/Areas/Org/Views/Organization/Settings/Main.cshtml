@using CmsWeb.Areas.Org.Models
@using UtilityExtensions
@using CmsWeb
@model CmsWeb.Areas.Org.Models.OrganizationModel
@{ var o = Model.Org; }
<form class="form form-horizontal non-modal ajax">
  <h2>
    @Model.Org.OrganizationName@(Model.Org.LeaderId.HasValue ? "," : "")
    <span style="font-size:12px">@Model.Org.LeaderName</span>
  </h2>
  <table class="table table-condensed not-wide">
    <tr>
      <th class="right">Name:</th>
      <td colspan="2">@o.OrganizationName</td> 
    </tr>
    <tr>
      <th class="right">Schedule:</th>
      <td colspan="2">@Model.Schedule</td>
    </tr>
    <tr>
      <th class="right"><span style="cursor: pointer; color:blue;" data-toggle="popover" data-content="<p style='font-weight: normal;'>Use this link to manage the divisions this organization belongs to.</p><p style='font-weight: normal;'>A dialog box will pop up.</p>" data-original-title="Divisions"><i class="fa fa-info-circle"></i></span>&nbsp;&nbsp;Divisions:</th>
      <td colspan="2">
        <a id="divisionlist" href="/SearchDivisions/@Model.Id" data-refresh="/Organization/DivisionList/@Model.Id">
          @Html.Partial("Other/DivisionList", OrganizationModel.Divisions(Model.Id))
        </a>
      </td>
    </tr>
    <tr>
      <th class="right">Campus:</th>
      <td colspan="2">@Html.CodeDesc("Org.CampusId", Model.CampusList())</td>
    </tr>
    <tr>
      <th class="right">Security Type:</th>
      <td>@Html.CodeDesc("Org.SecurityTypeId", Model.SecurityTypeList())</td>
      <th class="right" style="padding-left:1em">Status:</th>
      <td>@Html.CodeDesc("Org.OrganizationStatusId", Model.OrgStatusList())</td>
    </tr>
    <tr>
      <th class="right"><span style="cursor: pointer; color:blue;" data-toggle="popover" data-content="<p style='font-weight: normal;'>An upcoming new feature for classifying your organizations.</p><p style='font-weight: normal;'>In progress, stay tuned.</p>" data-original-title="What is Organization Type?"><i class="fa fa-info-circle"></i></span>&nbsp;&nbsp;Organization Type:</th>
      <td>@Html.CodeDesc("Org.OrganizationTypeId", Model.OrganizationTypes())</td>
      <th class="right"><span style="padding-left:1em">Leader Type:</span></th>
      <td>@Html.CodeDesc("Org.LeaderMemberTypeId", Model.LeaderTypeList())</td>
    </tr>
    <tr>
      <th class="right">Main Fellowship:</th>
      <td>@Html.CheckBoxReadonly(o.IsBibleFellowshipOrg)</td>
      <td rowspan="2" class="right">
        @if (User.IsInRole("Edit"))
        {
          <a class="ajax btn btn-primary" href="/Organization/MainEdit/@Model.Id" data-callback="popovers">Edit</a>
        }
      </td>
    </tr>
    <tr>
      <td class="right">Master OnlineReg:</td>
      <td>@Html.CheckBoxReadonly(o.OrgPickList.HasValue())</td>
    </tr>
  </table>
</form>