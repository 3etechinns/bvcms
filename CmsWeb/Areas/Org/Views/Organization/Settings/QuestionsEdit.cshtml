@model CmsData.Registration.Settings
<form class="form form-horizontal non-modal ajax span12">
    <br/>
    @FormAction()
    <div>
        <ul style="list-style: none; margin-left: 5px;">
            <li>
                <span style="cursor: pointer;" data-toggle="popover" data-content="<p>Small groups will actually refer to ExtraValue fields on the Person's record option.</p><p>This option is not normally used.</p>" data-original-title="TargetExtraValues"><i class="fa fa-info-circle"></i></span>&nbsp;&nbsp;<label for="TargetExtraValues" class="keyword big tip">
                    TargetExtraValues:
                </label>
                @Html.CheckBox("TargetExtraValues", Model.TargetExtraValues)
            </li>
        </ul>
    </div>
    <i class="blue">Re-order items by dragging the gray bar</i>
    <ul class="enablesort sort edit" id="QuestionList" style="list-style: none; margin-left: 5px;">
        @Html.EditorFor(m => m, "TabQuestions")
    </ul>
    @FormAction()
</form>

<div id="selectquestions" style="display:none;padding-left:2em">
  <ul>
    <li class="AskAllergies">Allergies</li>
    <li class="AnswersNotRequired">Answers Not Required</li>
    <li class="AskCheckboxes">Checkboxes</li>
    <li class="AskChurch">Church</li>
    <li class="AskCoaching">Coaching</li>
    <li class="AskDoctor">Doctor</li>
    <li class="AskDropdown">Dropdown</li>
    <li class="AskEmContact">Emerg Contact</li>
  </ul>
  <ul>
    <li class="AskExtraQuestions">Extra Questions</li>
    <li class="AskText">Multiline Text</li>
    <li class="AskGradeOptions">Grade Options</li>
    <li class="AskHeader">Header</li>
    <li class="AskInstruction">Instruction</li>
    <li class="AskInsurance">Insurance</li>
    <li class="AskMenu">Menu Choices</li>
    <li class="AskParents">Parents</li>
  </ul>
  <ul>
    <li class="AskRequest">Request</li>
    <li class="AskSize">Shirt Size</li>
    <li class="AskSMS">SMS Opt-in</li>
    <li class="AskSuggestedFee">Suggested Fee</li>
    <li class="AskTickets">Tickets</li>
    <li class="AskTylenolEtc">Tylenol Etc</li>
    <li class="AskYesNoQuestions">Yes/No Questions</li>
  </ul>
</div>

@helper FormAction()
{
    <div class="pull-right">
        <a href="/Organization/Questions/@Model.OrgId" class="btn ajax">Cancel</a> <a href="#" class="AddQuestion btn ajax btn-success">Add Question Item</a> <a href="/Organization/QuestionsUpdate/@Model.OrgId" class="btn btn-primary ajax">Save</a>
    </div>
    <div class="formerror">@Html.ValidationMessage("Form")</div>
}