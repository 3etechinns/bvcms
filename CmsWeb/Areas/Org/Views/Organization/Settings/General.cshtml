@model CmsWeb.Areas.Org.Models.OrganizationModel
<form class="form form-horizontal non-modal ajax span12">
    <br/>
    @Html.Hidden("Id", Model.Id)
    @FormAction()
    <ul class="noedit" style="list-style: none; margin-left: 5px;">
        @Html.EditorFor(m => m, "TabGeneral")
    </ul>
    @FormAction()
</form>
@helper FormAction()
{
   if (User.IsInRole("Edit"))
   {
       <div class="pull-right">
           <a href="/Organization/GeneralEdit" class="btn ajax pull-right">Edit</a>
       </div>
   }
}
