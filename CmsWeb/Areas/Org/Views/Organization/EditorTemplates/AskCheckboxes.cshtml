@model CmsData.Registration.AskCheckboxes
@using CmsWeb
@using (var ci = Html.BeginCollectionItem(Model.Name))
{
	var listname = Html.NameFor2(m => m.list);
	<li class="movable type-@Model.Type">@Html.Raw(ci.hiddenindex)
		@Html.HiddenFor(m => m.Type)
        <span style="cursor: pointer;" data-toggle="popover" data-content="<p>This is a group of checkboxes where you can check more than one.</p><p>You can specify a minumum number they must check.</p><p>And you can specify a maximum number they can check.</p><p>For each checkbox, you can specify the SmallGroup (required) and the following:<br/>Optional Fee for the selection.<br/>Optional Limit which limits the number of people allowed for a selection.<br/>Optional DateTime which registers them in a meeting.</p>" data-original-title="AskCheckboxes"><i class="fa fa-info-circle"></i></span>&nbsp;&nbsp;<label class="keyword big tip">
			AskCheckboxes:
            @Html.Partial("EditorTemplates/QuestionsMenu")   
        </label>
	    <ul>
			<li> <span class="keyword2">Label:</span> @Html.TextBoxFor(m => m.Label, new {@class = "long"}) </li>
			<li> <span class="keyword2">Minimum:</span> @Html.TextBoxFor(m => m.Min) </li>
			<li> <span class="keyword2">Maximum:</span> @Html.TextBoxFor(m => m.Max) </li>
			<li> <span class="keyword2">Columns:</span> @Html.TextBoxFor(m => m.Cols) 
                <ul id="Checkboxes" class="movable-list sort">
                    @foreach (var item in Model.list)
                    {
                        item.Name = listname;
                        @Html.EditorFor(m => item)
                    }
                </ul>
				<div class="newitem"><a href="/Organization/NewCheckbox/@listname"><img src="/Content/images/plus1.png" alt="" /> Add Item</a></div>
			</li>
		</ul>
	</li>
}