@model CmsData.Registration.AskDropdown
@using CmsWeb
@using (var ci = Html.BeginCollectionItem(Model.Name))
{
	var listname = Html.NameFor2(m => m.list);
	<li class="movable type-@Model.Type">@Html.Raw(ci.hiddenindex)
        @Html.HiddenFor(m => m.Type)
        <span style="cursor: pointer;" data-toggle="popover" data-content="<p>This will be presented as a dropdown selection.</p><p>Enters them in a smallgroup within the organization.</p><p>Optional Fee for the selection.</p><p>Optional Limit which limits the number of people allowed for a selection.</p><p>Optional DateTime which registers them in a meeting.</p>" data-original-title="Dropdown"><i class="fa fa-info-circle"></i></span>&nbsp;&nbsp;<label class="keyword big tip">
			Dropdown:
            @Html.Partial("EditorTemplates/QuestionsMenu") 
        </label>
		<ul>
			<li><span class="keyword2">Label:</span> 
				@Html.TextBoxFor(m => m.Label, new { @class = "long" })
				<ul class="movable-list sort">
					@foreach(var item in Model.list)
					{
						item.Name = listname;
						@Html.EditorFor(m => item)
					}
				</ul>
				<div class="newitem"><a href="/Organization/NewDropdownItem/@listname"><img src="/Content/images/plus1.png" alt="" /> Add Item</a></div>
			</li>
		</ul>
	</li>
}