@model CmsData.Registration.AskRequest
@using CmsWeb
@using (var ci = Html.BeginCollectionItem(Model.Name))
{
	<li class="movable type-@Model.Type">@Html.Raw(ci.hiddenindex)
		@Html.HiddenFor(m => m.Type)
        <span style="cursor: pointer;" data-toggle="popover" data-content="<p>Displays a text box for entering things like roomate/teacher/coach request.</p><p>You can put a label on this text box to clarify what you are asking.</p>" data-original-title="AskRequest"><i class="fa fa-info-circle"></i></span>&nbsp;&nbsp;<label class="keyword big tip">
			AskRequest
            @Html.Partial("EditorTemplates/QuestionsMenu") 
        </label>
		<ul>
			<li> <span class="keyword2">Label:</span> @Html.TextBoxFor(m => m.Label, new {@class = "long"})</li>
		</ul>
	</li>
}