@using CmsData.Classes.Twilio
@using UtilityExtensions
@model CmsWeb.Areas.People.Models.Person.PersonModel
<div class="navbar navbar-inverse yamm toolbar pull-right">
    <div class="navbar-inner" style="">
        <div class="container nav-collapse collapse">
            <ul class="nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-envelope-alt"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href='/Email/Index/@ViewBag.queryid'>Individuals</a></li>
                        <li><a href='/Email/Index/@ViewBag.queryid?parents=true'>Parents</a></li>
                        @if ((bool?)ViewBag.ParentOrgContext == true)
                        {
                            <li><a href='/Email/Index/@ViewBag.leadersqid'>Leaders under this org</a></li>
                            <li><a href='/Email/Index/@ViewBag.membersqid'>Members under this org</a></li>
                        }
                        @if (TwilioHelper.userSendSMS(Util.UserId))
                        {
                            <li>
                                <a href='/SMS/Options/@ViewBag.queryid'>Send Text
                                </a>
                            </li>
                        }
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-cloud-download"></i></a>
                    <ul class="dropdown-menu" style="left:-500px">
                        <li>
                            @Html.Partial("Menu/Toolbar")
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-cog"></i></a>
                    <ul id="ultoolbar" class="dropdown-menu">
                        @foreach (var u in Model.Person.Users)
                        {
                            <li><a class="manageUser" href="/Person2/UserEdit/@u.UserId">Manage User: @u.Username</a></li>
                        }
                        <li class="divider"></li>
                        <li><a href="#">Add New User</a></li>
                        <li class="divider"></li>
                        <li><a id="split" href="/Person2/Split/@Model.PeopleId">Put in own family</a></li>
                        <li><a id="merge" href="/Person2/Merge/@Model.PeopleId">Merge this duplicate</a></li>
                        <li><a id="deletePerson" href="/Person2/Delete/@Model.PeopleId">Delete this duplicate</a></li>
                        <li><a id="recordDeath" href="#">Mark As Deceased</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
<p class="record_added muted"><small>Record added @Model.basic.Created.FormatDate()</small></p>
