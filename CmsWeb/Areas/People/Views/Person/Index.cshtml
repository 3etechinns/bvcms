<div class="container">
    <div class="row-fluid">
        <div class="span3">
            <div id="sidebar">
                @Html.Partial("FamilyGrid", Model)
                @Html.Partial("Addresses", Model)
                @Html.Partial("RelatedFamiliesGrid", Model)
            </div>
        </div>
        <div class="span9">
            <div class="row-fluid">
                <div class="span12" id="profile-header">
                    <div class="span9">
                        @Html.Partial("Snapshot", Model.displayperson)
                    </div>
                    <div class="span3" id="profile-actions">
                        <p class="meta">Record added @Model.displayperson.basic.Created.FormatDate()</p>
                        @Html.Partial("Toolbar", Model)
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    @* Dave : Page shifts left and right when selecting tabs or dialog *@
                    <div class="tabbable">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#personal" data-toggle="tab">Personal</a></li>
                            <li><a href="#enrollment" data-toggle="tab">Involvement</a></li>
                            <li><a href="#profile" data-toggle="tab">Member Profile</a></li>
                            <li><a href="#giving" data-toggle="tab">Giving</a></li>
                            <li><a href="#account" data-toggle="tab">Account</a></li>
                            <li><a href="#comments" data-toggle="tab">Comments</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active" id="personal">
                                <p>
                                    <form class="form form-horizontal DisplayEdit">
                                        @Html.DisplayFor(m => m.displayperson.basic)
                                    </form>
                                </p>
                            </div>
                            @* Dave : do these sub tabs look good? *@
                            <div class="tab-pane fade" id="enrollment">
                                <ul class="nav nav-tabs subnav">
                                    <li class="active"><a href="#current" data-toggle="tab">Current</a></li>
                                    <li><a href="#previous" data-toggle="tab">Previous</a></li>
                                    <li><a href="#pending" data-toggle="tab">Pending</a></li>
                                    <li><a href="#attends" data-toggle="tab">Attendance</a></li>
                                    <li><a href="#registrations" data-toggle="tab">Registrations</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="current">
                                        <h2>Current Enrollments</h2>
                                    </div>
                                    <div class="tab-pane active" id="previous">
                                        <h2>Previous Enrollments</h2>
                                    </div>
                                    <div class="tab-pane active" id="pending">
                                        <h2>Pending Enrollments</h2>
                                    </div>
                                    <div class="tab-pane active" id="attends">
                                        <h2>Attendance</h2>
                                    </div>
                                    <div class="tab-pane active" id="registrations">
                                        <h2>Registrations</h2>
                                    </div>
                                </div>
                            </div>
                        <div class="tab-pane" id="profile">
                            <h2>Profile tab</h2>
                        </div>
                        <div class="tab-pane" id="giving">
                            <h2>Giving tab</h2>
                        </div>
                        <div class="tab-pane" id="account">
                            <h2>Account tab</h2>
                        </div>
                        <div class="tab-pane" id="comments">
                            <h2>Comments</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
