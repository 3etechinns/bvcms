@model CmsData.RelatedFamily
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Related Family</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="FamilyRelationshipDesc">Family Relationship Description</label>
                <div class="controls">
                    @Html.TextAreaFor(m => m.FamilyRelationshipDesc, new { rows = 5, @class = "form-control" })
                    <span class="help-block">Refer to both sides of the relationship.</span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
            <a href="/Person2/DeleteRelation/@ViewBag.Id/@Model.FamilyId/@Model.RelatedFamilyId" class="btn btn-danger delete"><i class="fa fa-trash"></i> Delete</a>
            <a href="/Person2/UpdateRelation/@ViewBag.Id/@Model.FamilyId/@Model.RelatedFamilyId" class="btn btn-primary save validate">Save Changes</a>
        </div>
    </div>
</div>