@model CmsWeb.Areas.People.Models.Person.PersonModel
<form class="modal hide fade" id="picture-modal" tabindex="-1" style="display: none; margin-top: -183.5px;" aria-hidden="true">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" type="button" aria-hidden="true"><i class="icon-remove-sign"></i></button>
        <h3>Photo</h3>
    </div>
    <div class="modal-body">
        <a href="@Model.Picture.LargeUrl" target="_blank"><img src="@Model.Picture.SmallUrl" alt=""> View full image</a>
            <fieldset class="">
                <label>Upload new photo</label>
                <input type="file" name="picture">
            </fieldset>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        <a href="#" class="btn btn-primary">Save changes</a>
    </div>
</form>