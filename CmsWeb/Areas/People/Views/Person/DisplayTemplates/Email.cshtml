@model CmsWeb.Areas.People.Models.Person.EmailInfo
<div class="control-group">
    @Html.LabelFor(m=> m, new { @class = "control-label nwrap"})
    <div class="controls">
        <p>
            <b>
            @if (Model.Send)
            {
                <span class="email_display">@Model.Address</span>
            }
            else
            {
                <del class="email_display">@Model.Address</del>
            }
            </b>
        </p>
    </div>
</div>
