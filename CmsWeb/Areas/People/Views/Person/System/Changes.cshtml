@using UtilityExtensions
@model CmsWeb.Areas.People.Models.Person.PersonModel
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <td colspan="6" class="right">
                <a href="#" class="ajax-refresh"><i class="icon-refresh"></i></a>
            </td>
        </tr>
        <tr>
            <th>Time</th>
            <th>User</th>
            <th>Field</th>
            <th>Before</th>
            <th>After</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.GetChangeLogs())
        { 
            <tr>
                <td title="@c.FieldSet">@c.Time.ToString2("g")</td>
                <td>@c.User</td>
                <td>@c.Field</td>
                <td>@c.Before</td>
                <td>@c.After</td>
                @if (c.Reversable)
                {
                    <td><a class="reverse" href="/Person2/Reverse/@Model.Person.PeopleId" field="@c.Field" value="@c.Before" pf="@c.pf">reverse</a></td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    </tbody>
</table>

