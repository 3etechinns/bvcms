@using UtilityExtensions
@model CmsWeb.Areas.People.Models.DownlineLevelsModel
@{
    Layout = ViewExtensions2.TouchPointLayout();
    ViewBag.Title = "Downline";
    var name = Model.Name;
    ViewBag.PageHeader = $"Downline for {name} ({Model.DownlineCount:N0} total disciples, {Model.DownlineLevels} levels deep) in {Model.Category}";
}
<div class="box box-responsive" style="margin-left: auto; margin-right:auto;display:table">
    <div class="box-content" style="display:table">
        <form class="ajax" data-results="#results" method="post" action="/DownlineLevels/Results">
            @Html.HiddenFor(m => m.CategoryId)
            @Html.HiddenFor(m => m.DownlineId)
            @Html.Partial("Results", Model)
        </form>
    </div>
</div>
