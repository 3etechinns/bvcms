@model CmsWeb.Areas.People.Models.ContactModel
@{
    ViewBag.Title = "Contact";
    ViewBag.PageHeader = "Contact";
    Layout = ViewExtensions2.TouchPointLayout();
}
@Html.Hidden("Id")
<div class="row">
    <div class="col-sm-12 col-md-9 col-lg-7">
        @Html.Partial("ContactDisplay", Model)
        <ul class="nav nav-tabs" id="special-content-tabs">
            <li class="active"><a href="#ministry-team" aria-controls="ministry-team" data-toggle="tab">Ministry Team</a></li>
            <li><a href="#contactees" aria-controls="contactees" data-toggle="tab">Those Contacted</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade in active" id="ministry-team">
                @if (Model.CanViewComments)
                {
                    <div class="row hidden-xs">
                        <div class="col-sm-12">
                            <div class="pull-right">
                                <a href="/SearchAdd2/Dialog/Contactor/@Model.ContactId" class="btn btn-success"><i class="fa fa-plus-circle"></i> Add Team Member</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-sm-12">
                        <form id="contactors" action="/Contact2/Contactors/@Model.ContactId" method="post">
                            @Html.Partial("Contactors", Model.Ministers)
                        </form>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="contactees">  
                @if (Model.CanViewComments)
                {
                    <div class="row hidden-xs">
                        <div class="col-sm-12">
                            <div class="pull-right">
                                <a href="/SearchAdd2/Dialog/Contactee/@Model.ContactId" class="btn btn-success"><i class="fa fa-plus-circle"></i> Add Contactee</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-sm-12">
                        <form id="contactees" action="/Contact2/Contactees/@Model.ContactId" method="post">
                            @Html.Partial("Contactees", Model.MinisteredTo)
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Fingerprint.Script("/Content/touchpoint/js/people/contact.js")
    @if (ViewBag.edit == true)
    {
        <script>
            $(function() {
                $("#edit").click();
            });
        </script>
    }
}