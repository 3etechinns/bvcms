@model CmsWeb.Areas.People.Models.DownlineDetailModel
@{
  Layout = ViewExtensions2.TouchPointLayout();
  ViewBag.Title = "Downline";
  var name = Model.Name;
  ViewBag.PageHeader = $"Downline for {name} ({Model.DownlineCount:N0} total disciples, Level {Model.Level} of {Model.DownlineLevels} levels) in {Model.Category}";
}
<div class="box box-responsive" style="margin-left: auto; margin-right:auto;display:table">
  <div class="box-content" style="display:table">
    <form class="ajax" data-results="#results" method="post" action="/DownlineDetail/Results">
      @Html.HiddenFor(m => m.CategoryId)
      @Html.HiddenFor(m => m.DownlineId)
      @Html.HiddenFor(m => m.Level)
      @Html.Partial("Results", Model)
    </form>
  </div>
</div>
