@using UtilityExtensions
@model CmsWeb.Areas.People.Models.DownlineSummaryModel
<div id="results">
  @Html.Partial("PagerTop", Model)
  <table class="table table-striped" style="width:auto">
    <thead>
      <tr>
        <td colspan="5">
          <strong>Total Count</strong> <span id="totalcount" class="badge">@Model.Count().ToString("N0")</span>
          As of: @DateTime.Now.FormatDateTm()
        </td>
      </tr>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Count</th>
      <th>Levels</th>
    </tr>
    </thead>
    <tbody>
      @foreach (var r in Model.ViewList())
      {
        <tr>
          <td>@r.Rank.ToString2("N0")</td>
          <td><a href="/DownlineLevels/@Model.CategoryId/@r.PeopleId" target="downline">@r.LeaderName</a></td>
          <td>@r.Cnt.ToString2("N0")</td>
          <td>@r.Levels.ToString2("N0")</td>
        </tr>
      }
    </tbody>
  </table>
  @Html.Partial("PagerBottom", Model)
  @Html.Partial("PagerHidden")
</div>