@using UtilityExtensions
@model CmsWeb.Areas.Search.Models.QueryModel
@{
    var categories = Model.FieldCategories().ToList();
}
<div class="modal fade" id="QueryConditionSelect">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Conditions</h4>
            </div>
            <div class="modal-body">
                <div>
                    <ul class="nav nav-tabs" id="condition-tabs">
                        <li class="active"><a href='#all' data-toggle="tab">All</a></li>
                        @for (var i = 0; i < categories.Count; i++)
                        {
                            var category = categories[i];
                            <li><a href='#@category.Name' data-toggle="tab">@category.Title</a></li>
                        }
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="all">
                            <div class="row">
                                <div class="col-xs-10 col-sm-11 col-md-12 col-lg-12">
                                    <div class="hidden-xs">
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                                            <input type="text" class="form-control search-box-input searchConditions" placeholder="Search">
                                        </div>
                                    </div>
                                    <div class="visible-xs-block">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                                            <input type="text" class="form-control search-box-input searchConditions" placeholder="Search">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <br/>
                                    <div style="max-height: 315px; overflow-y: scroll;">
                                        <table class="table table-striped" id="all-conditions">
                                            @foreach (var category in categories)
                                            {
                                                <thead>
                                                    <tr>
                                                        <th colspan="2">@category.Title</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var field in category.Fields)
                                                    {
                                                    <tr>
                                                        <td class="FieldLink">
                                                            <a href="#" id="@field.Name">@field.Title</a><br />
                                                            @field.Description
                                                        </td>
                                                        <td class="text-right">
                                                            <a href="http://docs.touchpointsoftware.com/SearchBuilder/QB-@(field.Name).html" target="help" class="help btn btn-default"><i class="fa fa-question-circle"></i> Help Article</a>
                                                        </td>
                                                    </tr>
                                                    }
                                                </tbody>
                                            }
                                            </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @for (var i = 0; i < categories.Count; i++)
                        {
                            var category = categories[i];
                            <div class="tab-pane" id="@category.Name">
                                @if (category.TopMessage.HasValue())
                                {
                                    <div class="alert alert-info">
                                        @category.TopMessage
                                    </div>
                                }
                                <div style="max-height: 315px; overflow-y: scroll;">
                                    <table class="table table-striped"> 
                                        <tbody>
                                            @foreach (var field in category.Fields)
                                            {
                                                <tr>
                                                    <td class="FieldLink">
                                                        <a href="#" id="@field.Name">@field.Title</a><br />
                                                        @field.Description
                                                    </td>
                                                    <td class="text-right">
                                                        <a href="http://docs.touchpointsoftware.com/SearchBuilder/QB-@(field.Name).html" target="help" class="help btn btn-default"><i class="fa fa-question-circle"></i> Help Article</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>