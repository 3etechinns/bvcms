@using UtilityExtensions
@model CmsWeb.Areas.Search.Models.QueryModel
@{
    var cats = Model.FieldCategories().ToList();
}
<div class="modal fade" id="QueryConditionSelect">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Conditions</h4>
            </div>
            <div class="modal-body">
                <div>
                    <ul class="nav nav-tabs" id="condition-tabs">
                        <li><a href='#all' data-toggle="tab">All</a></li>
                        @for (var i = 0; i < cats.Count; i++)
                        {
                            var c = cats[i];
                            <li @(i == 0 ? "class=active" : "")><a href='#@c.Name' data-toggle="tab">@Html.Raw(c.Title.Replace("|", "<br/>"))</a></li>
                        }
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane" id="all">
                            <div class="row">
                                <div class="col-xs-10 col-sm-11 col-md-12 col-lg-12">
                                    <div class="hidden-xs">
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                                            <input type="text" class="form-control search-box-input mousetrap" placeholder="Filter">
                                        </div>
                                    </div>
                                    <div class="visible-xs-block">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                                            <input type="text" class="form-control search-box-input mousetrap" placeholder="Filter">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <ul class="nav nav-pills nav-stacked">
                                        <li class="dropdown-header">People</li>
                                        <li><a href="#">Stuff here!!</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        @for (var i = 0; i < cats.Count; i++)
                        {
                            var c = cats[i];
                            <div class="tab-pane @(i==0? "active" : "")" id="@c.Name">
                                @if (c.TopMessage.HasValue())
                                {
                                    <p>@c.TopMessage</p>
                                }
                                <dl class="dl-horizontal">
                                    <dt class="FieldLink">Choose a Condition</dt>
                                    <dd><b>Click these for more help on a condition</b></dd>
                                    @foreach (var p in c.Fields)
                                    {
                                        <dt class="FieldLink"><a id='@p.Name' href="#">@p.Title</a></dt>
                                        <dd>
                                            <a class="help" href="http://docs.touchpointsoftware.com/SearchBuilder/QB-@(p.Name).html" target="help">@p.Description</a>
                                        </dd>
                                    }
                                </dl>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>