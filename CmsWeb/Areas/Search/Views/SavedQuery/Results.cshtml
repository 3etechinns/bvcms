@model CmsWeb.Areas.Search.Models.SavedQueryModel
<div id="results">
    @Html.Partial("PagerTop", Model.Pager)
    <div class="table-responsive">
        <table class="table table-striped" id="resultsTable">
            <thead>
                <tr>
                    <th><a href="#" class="sortable">Description</a></th>
                    <th><a href="#" class="sortable">Owner</a></th>
                    <th class="text-center"><a href="#" class="sortable">Public</a></th>
                    <th><a href="#" class="sortable">Last Run</a></th>
                    <th class="text-right"><a href="#" class="sortable">Count</a></th>
                    <th colspan="2" style="width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr><td colspan="7">No matching records.</td></tr>
                }
                @foreach (var r in Model.ViewList())
                {
                    Html.RenderPartial("Row", r);
                }
            </tbody>
        </table>
    </div>
    @Html.Partial("PagerBottom", Model.Pager)
    @Html.Hidden("totcnt", Model.Count().ToString("N0"))
    @Html.Hidden("Page", Model.Pager.Page)
    @Html.Hidden("Sort", Model.Pager.Page)
    @Html.Hidden("Direction", Model.Pager.Page)
</div>