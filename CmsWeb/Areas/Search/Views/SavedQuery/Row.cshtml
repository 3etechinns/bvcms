@model CmsWeb.Areas.Search.Models.SavedQueryInfo
@using UtilityExtensions
<tr id="row-@Model.QueryId">
    <td>
        <a href="/Query/@Model.QueryId">@Model.Name</a>
    </td>
    <td>@Model.Owner</td>
    <td>@(Model.Ispublic ? "public" : "private") </td>
    <td>@Model.LastRun.FormatDateTm()</td>
    <td class="right">@Model.RunCount.ToString("N0")</td>
    @if (Model.CanDelete)
    {
        <td><a class="edit-saved-query" href="/SavedQuery/Edit/@Model.QueryId"><i class="fa fa-pencil"></i></a></td>
        <td><a class="delete-saved-query" href="/SavedQuery/Delete/@Model.QueryId"><i class="fa fa-times"></i></a></td>
    }
    else
    {
        <td></td>
        <td></td>
    }

</tr>
