@model CmsWeb.Areas.Search.Models.PendingPersonModel
@{
    var noShowCampusDropdown = (new string[] { "org", "pending", "visitor", "registered" }).Contains(Model.context);
    var plainselect = new {PlainSelect = true};
}
@Html.EditorFor(m => m.NickName)
@Html.EditorFor(m => m.FirstName)
@Html.EditorFor(m => m.MiddleName)
@Html.EditorFor(m => m.LastName)
@Html.EditorFor(m => m.SuffixCode)
@Html.EditorFor(m => m.TitleCode)
@Html.EditorFor(m => m.DOB, "Birthday", new { help = "Please enter a birthday if possible" })
@Html.EditorFor(m => m.EmailAddress, new { help = "Please enter an email address if possible" })
@Html.EditorFor(m => m.CellPhone)
@Html.EditorFor(m => m.Gender, plainselect)
@Html.EditorFor(m => m.MaritalStatus, plainselect)
@if (noShowCampusDropdown)
{
    @Html.DisplayFor(m => m.Campus)
    @Html.DisplayFor(m => m.EntryPoint)
    @Html.EditorFor(m => m.Campus, "HiddenCodeInfo")
    @Html.EditorFor(m => m.EntryPoint, "HiddenCodeInfo")
}
else
{
    @Html.EditorFor(m => m.Campus, plainselect)
    @Html.EditorFor(m => m.EntryPoint, plainselect)
}
