@using CmsWeb
@using UtilityExtensions
@model CmsWeb.Models.TaskInfo
<td style="width: 5px;">
    @if (Model.IsOwner)
    {
        <input type="checkbox" value="@Model.Id" class="actionitem" />
    }
</td>
<td>
    <a href="/Task/Detail/@Model.Id">@Model.Description</a>
</td>
<td>
    @if (Model.WhoId.HasValue)
    {
        <a href="/Person2/@Model.WhoId">@Model.Who</a>
    }
</td>
<td>
    @Model.DueOrCompleted.FormatDate()
</td>
<td>
    @Model.Status
</td>
<td>
    @if (Util.UserPeopleId == Model.OwnerId)
    {
        <text>You</text>
    }
    else
    {
        @Model.Owner
    }
</td>
<td>
    @Model.DispOwner
</td>