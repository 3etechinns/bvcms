@using CmsWeb
@model CmsWeb.Models.ContactPage.ContactModel
<h2>Contact</h2>
<table class="grid">
    <tbody>
        <tr>
            <th class="right">Contact Date:</th>
            <td>@Model.contact.ContactDate.ToShortDateString()</td>
        </tr>
        <tr>
            <th class="right">Ministry:</th>
            <td><span>@Model.Ministry</span></td>
        </tr>
        <tr>
            <th class="right">Type:</th>
            <td><span>@Model.ContactType</span></td>
        </tr>
        <tr>
            <th class="right">Reason:</th>
            <td><span>@Model.Reason</span></td>
        </tr>
    </tbody>
</table>
<div>
    <div class="column">
        <div>@Html.CheckBoxReadonly(Model.contact.NotAtHome ?? false) <span>Attempted/Not Available</span></div>
        <div>@Html.CheckBoxReadonly(Model.contact.LeftDoorHanger ?? false) <span>Left Note Card</span></div>
        <div>@Html.CheckBoxReadonly(Model.contact.LeftMessage ?? false) <span>Left Message</span></div>
        <div>@Html.CheckBoxReadonly(Model.contact.ContactMade ?? false) <span>Contact Made</span></div>
    </div>
    <div class="column">
        <div>@Html.CheckBoxReadonly(Model.contact.GospelShared ?? false) <span>GospelShared</span></div>
        <div>@Html.CheckBoxReadonly(Model.contact.PrayerRequest ?? false) <span>Prayer Request Received</span></div>
        <div>@Html.CheckBoxReadonly(Model.contact.GiftBagGiven ?? false) <span>Gift Bag Given</span></div>
    </div>
</div>
@if (Model.CanViewComments)
{
    <div class="text">
        <div><strong>Comments:</strong></div>
        <div>@Model.contact.Comments</div>
        <div class="right">
            <a id="delete" class="bt red" href="/Contact/ContactDelete/@Model.contact.ContactId">Delete</a>
            <a id="edit" class="bt blue" href="/Contact/ContactEdit/@Model.contact.ContactId">Edit</a>
        </div>
    </div>
}
