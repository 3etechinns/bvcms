@model CmsData.RegSettings.MenuItem
@using CmsWeb
    @using (var ci = Html.BeginCollectionItem("Dropdown2"))
    {
      <li>@Html.Raw(ci.hiddenindex)
          @Html.HiddenFor(m => m.Id, new { @class = "renumberMe" }) 
          <img align="top" src="/images/Up-down.png" alt="" />
          @Html.TextBoxFor(m => m.Description, new { @class = "long" })
          <a class="del" href="#"><img align="top" src="/images/delete.gif" title="remove this item" /></a>
        <ul>
          <li><div class="sgfee">SmallGroup:</div> @Html.TextBoxFor(m => m.SmallGroup) </li>
          <li><div class="sgfee">Fee:</div> @Html.TextBoxFor(m => m.Fee) </li>
          <li><div class="sgfee">Limit:</div> @Html.TextBoxFor(m => m.Limit) </li>
        </ul>
      </li>
    }
