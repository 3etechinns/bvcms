<div>
<table class="grid">
    <thead>
	<tr>
		<th>Select</th>
		<th align="left"><a href='#' class="sortable">Name</a></th>
		<th align="left">Address </th>
		<th>Gender </th>
		<th>Age </th>
		<th align="left"><a href='#' class="sortable">Request</a></th>
		<th align="left" width="25%">Groups </th>
	</tr>
	</thead>
	<tbody>
 @Html.Partial("Rows", Model) 
    </tbody>
</table>
</div>

