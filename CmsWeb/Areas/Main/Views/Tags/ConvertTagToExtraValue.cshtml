@using CmsWeb
@{
    ViewBag.Title = "Convert Tag to Extra Value";
    ViewBag.PageHeader = "Convert Tag to Extra Value";
    Layout = ViewExtensions2.TouchPointLayout();
}
<div class="row">
    <div class="col-md-6">
        <div class="box box-responsive">
            <div class="box-content">
                <form action="/Tags/ConvertTagToExtraValue" method="post">
                    <div class="form-group">
                        <label for="tag">Tag</label>
                        @Html.TextBox("tag", "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="field">Field</label>
                        @Html.TextBox("field", "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="value">Value</label>
                        @Html.TextBox("value", "", new { @class = "form-control" })
                    </div>
                    <p>
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>