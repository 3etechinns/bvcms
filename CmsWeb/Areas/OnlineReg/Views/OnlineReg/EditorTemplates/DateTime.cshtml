@using UtilityExtensions
@model DateTime?
@{
    var fmt = "{0:d}";
    var s = "";
    if (Model != null)
    {
        if (Model.Value.TimeOfDay.Ticks > 0)
        {
            s = Model.Value.FormatDateTm();
            fmt = "{0:g}";

        }
        else
        {
            s = Model.FormatDate();
        }
    }
}
<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "control-label col-sm-3 labelsize" })
    <div class="col-sm-9">
        <div class="input-append date">
            @Html.TextBoxFor2(m => m, 
                useNativeUnobtrusiveAttributes:true, 
                format: @fmt, 
                htmlAttributes:new { size="16", @class = "form-control" })<span class="add-on"><i class="fa fa-calendar"></i></span>
        </div>
        @Html.ValidationMessageLabelFor(m => m)
    </div>
</div>
