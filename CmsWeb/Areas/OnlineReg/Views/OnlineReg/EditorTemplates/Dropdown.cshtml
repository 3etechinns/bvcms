@model string
@{
    var name = Html.NameFor2(m => m);
    const string labelclasses = "control-label col-sm-3 labelsize";
    var items = (IEnumerable<SelectListItem>)ViewBag.items;
}
<div class="form-group">
    @(ViewBag.label != null
        ? Html.Label(ViewBag.label as string, new {@class = labelclasses }) 
        : Html.LabelFor(m => m, new {@class = labelclasses }))
    <div class="col-sm-9">
        @Html.DropDownList(name, items, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m)
    </div>
</div>