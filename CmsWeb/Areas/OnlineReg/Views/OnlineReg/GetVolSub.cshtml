@model CmsWeb.Models.VolSubModel 
@using UtilityExtensions
@using CmsWeb
@{
    Layout = "/Views/Shared/onlinereg.cshtml";
    ViewBag.Title = "Email Volunteer Subs";
}
@section head
{
<style type="text/css">
.item
{
    float: left;
    width: 13.3em;
    margin: 0 2em 0 0;
    border-right: 1px solid #eee;
    padding: 0 0 5px 0;
}
</style>
}
@section scripts
{
@Html.Script("/Content/js/jquery.transpose.js")
@Html.Script("/Scripts/ManageVolunteer.js")
<script src="/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="/ckeditor/adapters/jquery.js" type="text/javascript"></script>
@Html.Script("/Scripts/Email.js")
@Html.Script("/Scripts/Edit.js")
}
<h2>@Model.org.OrganizationName</h2>
<div>
</div>
@using (Html.BeginForm("EmailVolunteerSubs"))
{
    @Html.Hidden("oid", Model.oid);
    @Html.Hidden("pid", Model.pid);
    @Html.Hidden("ticks", Model.ticks);
    <p><label>Subject:</label>
    @Html.TextBox("subject", Model.subject, new { style = "width:90%" })
    </p>
    <p><label>Body:</label>
    @Html.TextArea("message", Model.message, new { @class = "editor", rows="7", cols="15" })
    </p>
<hr />
<div><input id="SelectAll" type="checkbox" /> Select All</div>
<div class="wrapper">
    @foreach (var p in Model.FetchPotentialSubs())
    {
    <div class="item" >
        <input type="checkbox" name="pids" value="@p.Key" />
        <span>@p.Value</span>
    </div>
    }
</div>
<div style="clear:both"></div>
<hr />
    <input type="Submit" name="submit" value="Send Emails" />
}