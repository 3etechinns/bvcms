}
@if (Model.setting.AskTickets == true)
{ 
    @Html.Hidden3(Model.inputname("ntickets"), Model.ntickets)
}
@if (Model.setting.SuggestedFee == true)
{ 
    @Html.Hidden3(Model.inputname("suggestedfee"), Model.suggestedfee)
}
@if(Model.setting.Dropdown1.Count > 0)
{ 
    @Html.Hidden3(Model.inputname("option"), Model.option)
}
@if(Model.setting.Dropdown2.Count > 0)
{ 
    @Html.Hidden3(Model.inputname("option2"), Model.option2)
}
@if(Model.setting.Dropdown3.Count > 0)
{ 
    @Html.Hidden3(Model.inputname("option3"), Model.option3)
}
@if(Model.setting.GradeOptions.Count > 0)
{ 
    @Html.Hidden3(Model.inputname("gradeoption"), Model.gradeoption)
}
@for(int n = 0; n < Model.setting.ExtraQuestions.Count; n++)
{
    var a = Model.setting.ExtraQuestions[n];
    @Html.Hidden3(Model.inputname("ExtraQuestion[" + n + "].Key"), a.Question)
    @Html.Hidden3(Model.inputname("ExtraQuestion[" + n + "].Value"), Model.ExtraQuestion[a.Question])
}
@for(int n = 0; n < Model.setting.YesNoQuestions.Count; n++)
{ 
    var a = Model.setting.YesNoQuestions[n];
    @Html.Hidden3(Model.inputname("YesNoQuestion[" + n + "].Key"), a.SmallGroup)
    @Html.Hidden3(Model.inputname("YesNoQuestion[" + n + "].Value"), Model.YesNoQuestion[a.SmallGroup])
}
@if (Model.Checkbox != null)
{
  foreach (var a in Model.Checkbox)
  { 
    @Html.Hidden3(Model.inputname("Checkbox"), a)
  }
}
@if (Model.Checkbox2 != null)
{
  foreach (var a in Model.Checkbox2)
  { 
    @Html.Hidden3(Model.inputname("Checkbox2"), a)
  }
}
@{
int nn = 0;    
    foreach (var i in Model.MenuItemsChosen())
    { 
    @Html.Hidden3(Model.inputname("MenuItem[" + nn + "].Key"), i.sg)
    @Html.Hidden3(Model.inputname("MenuItem[" + nn++ + "].Value"), Model.MenuItemValue(i.sg))
    }
}
@if (Model.setting.Deposit > 0)
{ 
    @Html.Hidden3(Model.inputname("paydeposit"), Model.paydeposit)
}
