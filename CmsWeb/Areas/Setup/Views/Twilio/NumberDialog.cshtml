@using CmsData
@{
    var numbers = TwilioHelper.getUnusedNumberList();
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NumberDialog</title>
</head>
<body>
    <center>
	    <form action="/Setup/Twilio/NumberAdd" method="post">
            <input type="hidden" name="groupID" value="@ViewBag.ID" />
	        <table cellspacing="10">
            @if( numbers.Any() )
            {
	            <tr>
		            <td align="right">Number:</td>
		            <td align="left">@Html.DropDownList( "newNumber", new SelectList( numbers, "Number", "Description" ) )</td>
                </tr>
                <tr>
		            <td align="center" colspan="2">
                        <br />
			            <input type="submit" class="bt" value="Submit" /> &nbsp;&nbsp; <input type="button" class="bt" cancelbutton="dialog" value="Cancel" />
		            </td>
	            </tr>
            }
            else
            {
                <tr>
		            <td align="center">There are no additional unused numbers.</td>
                </tr>
                <tr>
		            <td align="center">
                        <br />
			            <input type="button" class="bt" cancelbutton="dialog" value="OK" />
		            </td>
	            </tr>
            }
	        </table>
	    </form>
	</center>
</body>
</html>