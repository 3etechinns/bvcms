@model CmsWeb.Areas.Dialog.Models.RepairTransactionsOrgs
<div class="modal-header">
  <a class="close" data-dismiss="modal">x</a>
  <h3>Repair Transactions Progress</h3>
</div>
<div class="modal-body">
  @Html.HiddenFor(m => m.Id)
  @Html.DisplayFor(m => m.Count, new { Label = "Number of Organizations" })
  @Html.DisplayFor(m => m.Started, "DateAndTime")
  @Html.DisplayFor(m => m.Processed)
  @Html.DisplayFor(m => m.Completed, "DateAndTime")
  @Html.DisplayFor(m => m.ElapsedTime)
</div>
<div class="modal-footer">
  @Html.HiddenFor(m => m.Orgs)
  @if (Model.Completed.HasValue)
  {
    @Html.Hidden("finished", "true")
    <a href="#" class="btn btn-success" data-dismiss="modal">Dismiss</a>
  }
</div>