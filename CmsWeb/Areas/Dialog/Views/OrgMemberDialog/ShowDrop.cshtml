@model CmsWeb.Areas.Dialog.Models.OrgMemberModel
<form class="form form-horizontal modal fade hide ajax members-update" method="POST">
  <div class="modal-header">
    <h4>Drop @Model.Name from @Model.OrgName</h4>
  </div>
  <div class="modal-body">
    <fieldset class="display">
      @Html.HiddenFor(m => m.PeopleId)
      @Html.HiddenFor(m => m.OrgId)
      @Html.HiddenFor(m => m.Group)
      @Html.EditorFor(m => m.DropDate, new {help = "Optional, Leaving it Blank gives Current Date/Time"})
      @Html.EditorFor(m => m.RemoveFromEnrollmentHistory, new {help = "Optional, only recommended for mistakes or test enrollments"})
    </fieldset>
  </div>
  <div class="modal-footer">
    <div class="alert alert-danger">Are you sure you want to drop @Model.Name from @Model.OrgName?</div>
    <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    <a href="/OrgMemberDialog/Drop" class="btn btn-danger ajax">Drop</a>
  </div>
</form>