@model CmsWeb.Areas.Dialog.Models.SearchUsersModel
<form class="form form-horizontal modal fade hide validate ajax">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Select Users</h3>
    </div>
    <div class="modal-body">
        @Html.Hidden("topid0", Model.topid)
        @Html.Hidden("ordered", Model.ordered)
        @Html.Hidden("singlemode", Model.singlemode)
        <div>
            <div>
                <div>
                    <input id="searchname" name="name" type="text" title="Starting letters of First&lt;space>Last or just Last" class="span2 search-query">
                    <a href="/SearchUsers/Results" type="submit" class="search btn ajax">Search</a>
                    <a href="/SearchUsers/Results" type="submit" class="newsearch btn ajax">Clear</a>
                </div>
            </div>
        </div>
        <div style="overflow-y: auto; max-height: 400px">
            @Html.Partial("Results", Model)
        </div>
    </div>
    <div class="modal-footer">
        <div class="pull-right">
            <button class="UpdateSelected btn btn-primary">Save changes</button>
        </div>
    </div>
</form>