@using UtilityExtensions
@model CmsWeb.Areas.Dialog.Models.MissionSupportModel
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4>@Model.OrgName</h4>
            <strong>Adding Donation From @Model.Name</strong>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(m => m.OrgId)
            @Html.HiddenFor(m => m.PeopleId)
            @Html.HiddenFor(m => m.Group)
            @Html.EditorFor(m => m.Goer, Model.GoerList())
            @Html.EditorFor(m => m.AmountGoer)
            @Html.EditorFor(m => m.AmountGeneral)
            @Html.EditorFor(m => m.CheckNo)
        </div>
        <div class="modal-footer">
            <a href="/OrgMemberDialog/Display" class="btn btn-default ajax">Cancel</a>
            <a id="add-mission-support" href="/OrgMemberDialog/AddMissionSupport" class="btn ajax btn-primary">Add Donation</a>
        </div>
    </div>
</div>