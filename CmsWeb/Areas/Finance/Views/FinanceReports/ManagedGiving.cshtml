@model System.Linq.IOrderedEnumerable<CmsData.RecurringGiving>

@{
	ViewBag.Title = "ManagedGiving";
    Layout = "/Views/Shared/SiteLayout.cshtml";
}
@section scripts
{
<script type="text/javascript">
    $(function () {
        $('table.grid tbody tr:even').addClass('alt');
    });
</script>
}
<h2>Managed Giving</h2>
<table class="grid" cellpadding="5">
	<thead>
		<tr>
			<td>Name</td>
			<td>StartWhen</td>
			<td>NextDate</td>
			<td>SemiEvery</td>
			<td>EveryN</td>
			<td>Period</td>
			<td>Day1</td>
			<td>Day2</td>
		</tr>
	</thead>	
	<tbody>
	@foreach (var rg in Model)
	{
		<tr>
			<td><a href="/Person/Index/@rg.PeopleId">@rg.Person.Name</a></td>
			<td>@rg.StartWhen.Value.ToShortDateString()</td>
			<td>@rg.NextDate.Value.ToShortDateString()</td>
			<td>@rg.SemiEvery</td>
			<td>@rg.EveryN</td>
			<td>@rg.Period</td>
			<td>@rg.Day1</td>
			<td>@rg.Day2</td>
		</tr>
	}
	</tbody>
</table>
