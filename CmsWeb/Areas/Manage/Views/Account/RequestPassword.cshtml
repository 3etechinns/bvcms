@using CmsWeb
@using UtilityExtensions
@{
  Layout = "~/Views/Shared/Site3.cshtml";
  ViewBag.Title = "Password Sent";
}
@section head
{
  <meta id="viewport" name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;" />
  <style>
    .panel-default {
      margin-top: 30px;
    }
  </style>
}
<div class="row-fluid">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        Password Sent
        <h4>@ViewExtensions2.DbSetting("NameOfChurch", "Name Of Church: " + Util.Host)</h4>
      </div>
      <div class="panel-body">
        <div class="form-group last">
          <div class="col-sm-12">
            <p class="alert alert-success">
              If you provided the username or email address associated with your record, you should receive an email shortly with a link to reset your password.
              If you do not receive anything, check with the church to make sure they have the correct email address for you.
            </p>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <a href="/">Back to Login Screen</a>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-sm-8 col-sm-offset-2 text-center">
      <h4 id="provider"><a href="http://www.bvcms.com"><img src="https://a1d932c175f6f84ca65d-434e90644472f15e2ba76cac2f5de424.ssl.cf2.rackcdn.com/bvcms-provided.jpg" /></a></h4>
    </div>
  </div>
</div>
}


