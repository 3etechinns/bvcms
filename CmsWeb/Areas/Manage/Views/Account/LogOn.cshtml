@using UtilityExtensions
@using CmsData
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Log on</title>
    <meta id="viewport" name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;" />   
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link href="/Content/styles/Site2.css?v=2" rel="stylesheet" type="text/css" />
</head>
<body>
<div id="container">
    <div id="body">
    @using (Html.BeginForm()) { 
        <div id="login">
        <h2>@DbUtil.Db.Setting("NameOfChurch", "NameOfChurch: " + Util.Host)</h2>
        <h4 id="provider">Provided by <a href="http://www.bvcms.com"><img src="/images/bvcms130.png" border="0" /></a></h4>
            <fieldset>
                <p>
                    <label for="username">Username or Email:</label>
                    @Html.TextBox("username")
                </p>
                <p>
                    <label for="password">Password:</label>
                    @Html.Password("password")
                </p>
                <p style="text-align:right">
                    <input type="submit" class="bt" value="Log On" />
                </p>
                <p>@Html.ValidationMessage("login")</p>
                <p>
                <a href="/Account/ForgotPassword">Forgot Password / Create Account</a>?
                </p>
            </fieldset>
            <div class="source">Source code is <a href="http://www.bvcms.com/Page/License">licensed under GPL</a></div>
        </div>
     } 
   </div>
   <div id="footer"><p><strong>Terms of Use:</strong><br />Access to this site is given by special permission only</p></div>
   </div>
</body>
</html>
