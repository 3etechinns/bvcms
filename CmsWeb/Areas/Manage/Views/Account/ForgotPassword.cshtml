@using CmsWeb
@using UtilityExtensions
@model CmsWeb.Areas.Manage.Controllers.AccountController.AccountInfo
@{
  Layout = "~/Views/Shared/Site3.cshtml";
  ViewBag.Title = "ForgotPassword/CreateAccount";
}
@section head
{
  <meta id="viewport" name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;" />
  <style>
    .panel-default {
      margin-top: 30px;
    }
    .important { color: #a94442 }
  </style>
}
<div class="row-fluid">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        Request a Password
        <h4>@ViewExtensions2.DbSetting("NameOfChurch", "Name Of Church: " + Util.Host)</h4>
      </div>
      <div class="panel-body">
        <form class="form-horizontal" action="/Account/ForgotPassword" role="form" method="POST">
          <div class="form-group">
            <label for="inputEmail" class="col-sm-3 control-label">
              Username or Email
            </label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="inputEmail" name="UsernameOrEmail" placeholder="Username or Email" required=required />
            </div>
          </div>
          <div class="form-group last">
            <div class="col-sm-offset-3 col-sm-9">
              <input type="submit" class="btn btn-primary" value="Request Password" />
            </div>
          </div>
        </form>
      </div>
      <div class="panel-footer">
        <h3 class="important">Important</h3>
        <p>
          To receive a link to set your password, you must provide either the username or email address we have associated with your record.
          If you do not receive anything, check with the church to make sure they have the correct email address for you.
        </p>
      </div>
      <div class="panel-footer">
        <a href="/">Back to Login Screen</a>
      </div>
    </div>
  </div>
    <div class="row-fluid">
        <div class="col-sm-8 col-sm-offset-2 text-right">
            <h4 id="provider">
                <a href="http://touchpointsoftware.com">
                    @if (Util.IsHosted)
                    {
                        <img src="/Content/images/tps_hosting_support.png" style="height: 70px;" />
                    }
                    else
                    {
                        <img src="/Content/images/tps_hosting_support_avail.png" style="height: 70px;" />
                    }

                </a>
            </h4>
        </div>
    </div>
</div>