@using CmsWeb
@{
    Layout = ViewExtensions2.TouchPointLayout();
    ViewBag.Title = "Batch Grade";
    ViewBag.PageHeader = "Batch Grade";
}
<div class="row">
    <div class="col-md-9">
        <div class="box box-responsive">
            <div class="box-content">
                @using (Html.BeginForm()) 
                { 
                    @Html.TextArea("text", "", new { rows = "20", cols = "100", wrap = "off", @class = "form-control" })<br />
                    <input type="submit" class="btn btn-primary" value="Submit" />
                }
            </div>
        </div>
    </div>
</div>