@using CmsWeb
@using CmsWeb.Models
@using RestSharp.Extensions
@model UpdateFieldsModel.TitleItems
<div class="inline align-top left-gutter well">
    <fieldset>
        <legend>
            @Model.title
            @if (Model.Instructions.HasValue())
            {
            <small><br/>@Model.Instructions</small>
            }
        </legend>
        <table class="@ViewExtensions2.GridClass">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.items)
                {
                    <tr>
                        <td>@(Model.UseCode ? i.Code : i.Id.ToString())</td>
                        <td>@i.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
</div>