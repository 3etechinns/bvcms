@using CmsWeb;
@model CmsWeb.Models.EmailsModel
@{
    Layout = "/Views/Shared/SiteLayout.cshtml";
    ViewBag.Title = "Emails";
}
    <script type="text/javascript">
        $(document).ready(function () {
            $(".datepicker").datepicker();
            $('td.tip').tooltip({
                delay: 0,
                showURL: false,
                showBody: "|"
            });
            $("form input.submitbutton").live('click', function (ev) {
                ev.preventDefault();
                var f = $(this).closest('form');
                var q = f.serialize();
                $.post(f.attr('action'), q, function (ret) {
                    $(f).html(ret);
                    $('table.grid > tbody > tr:even').addClass('alt');
                });
                return false;
            });
            $('table.grid > tbody > tr:even').addClass('alt');
        });
function GotoPage(pg) {
    var q = $('#form').formSerialize2();
    q = q.appendQuery("Page=" + pg);
    $.navigate("/Manage/Emails", q);
}
function SetPageSize(sz) {
    var q = $('#form').formSerialize2();
    q = q.appendQuery("PageSize=" + sz);
    $.navigate("/Manage/Emails", q);
}
</script>
<script src="/Scripts/Pager.js" type="text/javascript"></script>
<h2>Emails</h2>
<form id="form" method="post" action="/Manage/Emails/List">
@{Html.RenderPartial("List", Model);}
</form>
