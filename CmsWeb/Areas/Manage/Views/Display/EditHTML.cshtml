@using CmsWeb
@model CmsData.Content
@{
    Layout = "/Views/Shared/SiteLayout.cshtml";
}
@section scripts
{
<script src="/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="/ckeditor/adapters/jquery.js" type="text/javascript"></script>
@Html.Script("/scripts/edit.js")
<script type="text/javascript">
    $(function () {
        $(".bt").button();
        $("#delete").click(function (ev) {
            ev.preventDefault();
            if (confirm("Are you sure you want to delete this entry?"))
            	window.location = "/Display/ContentDelete/@Model.Id"; ;
        });
    });
</script>
}
@using (Html.BeginForm("ContentUpdate", "Display", FormMethod.Post))
{ 
    <div class="blogbody">
    <h2 class="title">@Model.Title</h2>
    <a href="/Display/Index">Menu of Content</a>
    <hr />
    @Html.Hidden("id", @Model.Id)
    <div>Title: @Html.TextBox("title", Model.Title)</div>
    <div>@Html.TextArea("body", Model.Body, new { @class = "editor", rows = "26", style = "width:90%" })
    </div>
	 <br />
    <input type="submit" class="bt" value="Save" /> &nbsp;&nbsp; <input type="button" id="delete" class="bt" value="Delete" />
    </div>
}