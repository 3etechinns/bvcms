@section scripts
{
    <script type="text/javascript">
        $(function () {
            $(".input-group.date").datepicker({ orientation: 'top' });
            $("a.query").click(function (ev) {
                ev.preventDefault();
                var f = $("#form");
                f.attr("action", $(this)[0].href);
                f.submit();
            });
        });
    </script>
}