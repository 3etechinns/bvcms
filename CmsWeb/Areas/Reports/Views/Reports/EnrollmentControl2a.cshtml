@using CmsWeb.Areas.Reports.Models
@model CmsWeb.Areas.Org.Models.OrgSearchModel

@{
    var list = EnrollmentControlModel.LastNameStarts(Model);
    var count = list.Count;
    int rows = count / 5;
    if (count % 5 > 0)
    {
        rows++;
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/css/jquery.mobile-1.3.1.min.css" rel="stylesheet" />
    <script src="~/Scripts/jQuery/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jQuery/jquery-migrate-1.1.1.js"></script>
    <script src="~/Scripts/Mobile/jquery.mobile-1.3.1.min.js"></script>
    <script src="~/Scripts/Org/enroll-control-ipad.js"></script>
</head>
<body>
    <div data-role="page" id="foo">

        <div data-role="header">
            <h4>Enrollment Control</h4>
        </div>
        <div data-role="content">
            @for (var r = 0; r < rows; r++)
            {
                <div class="ui-grid-d">
                    @for (var c = 0; (r + c*rows) < count && c < 5; c++)
                    {
                    <div class="ui-block-@((char)('a' + c))"><a href="/Reports/EnrollmentControl2b/@list[r+c*rows]?j=@Model.EncodedJson()" class="ui-shadow ui-btn ui-corner-all">@list[r+c*rows]</a></div>
                    }
                </div>
            }
        </div>
    </div>
</body>
</html>