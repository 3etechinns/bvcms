@using DocumentFormat.OpenXml.Drawing.Charts
@using UtilityExtensions
@helper SearchBuilderDropdown(bool onqb)
{
    <div class="dropdown2-menu">
        <ul>
            <li>@AnchorLink("Last Search", "/QueryBuilder2/Main")</li>
            <li>@AnchorLink("New Search", "/QueryBuilder2/NewQuery")</li>
            <li><a href="/SavedQuery2">Saved Searches</a></li>
            @if (onqb)
            {
                <li>@JQueryIdLink("Save Search As", "ShowSaveQuery")</li>
            }
        </ul>

    </div>
}
@helper AnchorLink(string text, string href, string target = null)
{
    if (target.HasValue())
    {
        <a href="@href" target="@target">@text</a>
    }
    else
    {
        <a href="@href">@text</a>
    }
}
@helper LiAnchorLink(string text, string url, bool display = true, string target = null)
{
    if (display)
    {
        <li>@Helper.AnchorLink(text, url, target)</li>
    }
}
@helper LiHeader(string text, bool display = true)
{
    if (display)
    {
        if (text.HasValue())
        {
            <li class="header">@text</li>
        }
        else
        {
            <li class="lispace">&nbsp;</li>
        }
    }
}
@helper JQueryIdLink(string text, string id)
{
    <a id="@id" href="#">@text</a>
}
@helper JQueryIdLink(string text, string id, string data)
{
    <a id="@id" data-item="@data">@text</a>
}
@helper LiJQueryIdLink(string text, string id, bool display = true)
{
    if (display)
    {
        <li><a id="@id" href="#">@text</a></li>
    }
}
@helper ButtonLink(string text, string href, string target = null)
{
    if (target.HasValue())
    {
        <a href="@href" target="@target">@text</a>
    }
    else
    {
        <a href="@href">@text</a>
    }
}
@helper OnlineRegSubmitButtonRow(string text, bool onlyoneallowed = false)
{
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            @Helper.OnlineRegSubmitButton(text, onlyoneallowed)
        </div>
    </div>

}
@helper OnlineRegSubmitButton(string text, bool onlyoneallowed = false)
{
    <input type="submit" id="submitit" data-onlyoneallowed="@onlyoneallowed" class="btn btn-primary" value="@text" />
}
@helper OnlineRegAjaxButtonRow(string url, string text, string style = "btn-primary", string id = "")
{
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            @OnlineRegAjaxButton(url, text, style, id)
        </div>
    </div>
}

@helper OnlineRegAjaxButton(string url, string text, string style = "btn-primary", string id = "")
{
    <a @(id.HasValue() ? "id=" + id : "") href="@url" class="btn @style submitbutton ajax">
        @text
    </a>
}