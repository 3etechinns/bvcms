@helper SearchBuilderDropdown(bool onqb, bool newlook)
{
    <div class="dropdown-menu">
        <ul>
            @if (newlook)
            {
                <li class="header"><span>Search Builder</span></li>
            }
            <li><a href="/QueryBuilder/Main">
                    Last Search
                </a></li>
            <li><a href="/QueryBuilder/NewQuery">
                    New Search
                </a></li>
            <li><a href="/SavedQuery">
                    Saved Searches
                </a></li>
                        
            @if (onqb)
            {
                <li><a id="ShowOpenQuery" href="#">
                        Open Saved Search
                    </a></li>
                <li><a id="ShowSaveQuery" href="#">
                        Save Search As
                    </a></li>
            }
        </ul>
    </div>
}

